<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_check"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_my_project"
        android:background="@color/blue_btn_my_project"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_my_project"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_my_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:textColor="@color/gray_checking"
        android:text="@string/tv_set_my_project"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>