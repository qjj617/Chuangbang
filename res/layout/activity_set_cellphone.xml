<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <!-- 手机校验顶部边框 开始 -->

    <LinearLayout
        android:id="@+id/linear_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3474BB" >

        <TextView
            android:id="@+id/tv_personal_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="个人信息"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_mobile_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="手机校验"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- 手机校验顶部边框结束 -->


    <!-- 修改手机号边框开始 -->

    <EditText
        android:id="@+id/et_code"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_new_phonenumber"
        android:layout_toLeftOf="@+id/bt_set_code"
        android:ems="10"
        android:hint="输入验证码"
        android:paddingTop="40dp" />

    <Button
        android:id="@+id/bt_set_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_code"
        android:layout_alignParentRight="true"
        android:text="获取验证码" />

    <EditText
        android:id="@+id/et_new_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_code"
        android:layout_below="@+id/linear_ll"
        android:ems="10"
        android:hint="请输入手机号码"
        android:paddingTop="40dp" />

    <Button
        android:id="@+id/bt_modify"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_code"
        android:layout_centerHorizontal="true"
        android:background="#3474BB"
        android:textColor="#FFFFFF"
        android:layout_marginTop="33dp"
        android:text="立即修改" />
    <!-- 修改手机号边框结束 -->
    

</LinearLayout>
