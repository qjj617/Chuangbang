<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题栏外框架 -->

    <LinearLayout
       
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#3474BB" >

        <Button
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="个人信息"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
    <!-- 标题栏外框架结束 -->


    <!-- 内容栏外框架 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="vertical" >

        <!-- 头像框架 -->

        <LinearLayout
            android:id="@+id/ll_avater"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:text="头像" />

                <ImageView
                    android:id="@+id/iv_avater"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 头像框架 结束 -->


        <!-- 名字框架 -->

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:text="名字" />

                <TextView
                    android:id="@+id/tv_set_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="xxx" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 名字框架 结束 -->
        <!-- 公司框架 -->

        <LinearLayout
            android:id="@+id/ll_company"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:text="公司" />

                <TextView
                    android:id="@+id/tv_set_company"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="xxx" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 公司框架 结束 -->
        
        
        <!--  职位框架 -->

        <LinearLayout
            android:id="@+id/ll_position"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:text="职位" />
                 <TextView
                    android:id="@+id/tv_set_position"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="xxx" />
                
            </RelativeLayout>
        </LinearLayout>
        <!-- 职位框架 结束 -->
        
        <!-- 手机号框架 -->

        <LinearLayout
            android:id="@+id/ll_sellphone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:text="手机号" />
                 <TextView
                    android:id="@+id/tv_set_sellphone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="xxx" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 手机号框架 结束 -->
        
        <!-- 邮箱框架 -->

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:text="邮箱" />
                 <TextView
                    android:id="@+id/tv_set_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="xxx" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 邮箱框架 结束 -->
        <!-- 地区框架 -->

        <LinearLayout
            android:id="@+id/ll_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="地区"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp" />
                
                 <TextView
                    android:id="@+id/tv_set_area"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="xxx" />
                
            </RelativeLayout>
        </LinearLayout>
        <!-- 地区框架 结束 -->
        <!-- 详细地址框架 -->

        <LinearLayout
            android:id="@+id/ll_"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                     android:gravity="center_vertical"
                    android:paddingLeft="9dp" 
                    android:text="详细地址" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 详细地址框架 结束 -->
        <!-- 履历框架 -->

        <LinearLayout
            android:id="@+id/ll_record"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                     android:gravity="center_vertical"
                    android:paddingLeft="9dp" 
                    android:text="履历" />
                
                  <TextView
                    android:id="@+id/tv_set_record"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="xxx" />
                
                
            </RelativeLayout>
        </LinearLayout>
        <!-- 头像框架 结束 -->
    </LinearLayout>

</LinearLayout>